    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Aula)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salon)
        </td>
